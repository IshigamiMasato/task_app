<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_date %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.end_date %></td>
  </tr>
  <tr>
    <th>終日</th>
    <% if @schedule.all_day == 1 %>
    <td><%= "○" %></td>
    <% else %>
    <td><%= "×" %></td>
    <% end %>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.post_memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール情報一覧に戻る", schedules_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_schedule_path(@schedule) %></li>
    <li><%= link_to "スケジュールを消去", schedule_path(@schedule), method: :delete, data: {confirm: "本当に消去しますか?"}%></li>
  </ul>
</div>


    