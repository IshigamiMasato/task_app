<h3>スケジュール編集</h3>

<% if flash.notice %>
  <p class = "notice" ><%= flash.notice %></p>
<% end %>

<%= render "shared/error", obj:@schedule %>

<%= form_for @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day, "終日" %></th>
      <td>
        <%= f.check_box :all_day, {}, checked_value = "1", unchecked_value = "0" %>
        <br>終日の場合はチェックを入れます
      </td>
    </tr>
    <tr>
      <th><%= f.label :post_memo, "スケジュールメモ" %></th>
      <td><%= f.text_area :post_memo %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "スケジュール情報一覧に戻る", schedules_path %></li>
    </ul>
  </div>
<% end %>